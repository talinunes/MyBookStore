@model MyBookStore.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Gêneros</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <hr />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title h5">Livros</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Books.FirstOrDefault().Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Books.FirstOrDefault().Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Books.FirstOrDefault().Author)</th>
                        <th>@Html.DisplayNameFor(model => model.Books.FirstOrDefault().ReleaseYear)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Book item in Model.Books)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Author)
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>