@model MyBookStore.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Erro</h1>
<h2 class="text-danger">Um erro ocorreu ao processar sua requisição:</h2>
<h3 class="text-danger">@Model.Message</h3>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
